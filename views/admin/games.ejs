<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/dashboard.css">
    <title>Dashboard</title>
</head>
<body>
    <header class="full-screen">
        <%- include('../partials/navbar.ejs') %>
          <div class="m-3">
            <h1>Traditional Game</h1>
            <h1>Dashboard</h1>
          </div>
          <div class="m-3">
              <a href="/admin/games/details">
                <p>See Game Details</p>
              </a>
          </div>
          <div class="container-fluid">
            <table class="table caption-top">
              <caption>List of games</caption>
              <thead>
                <tr>
                  <th scope="col">id</th>
                  <th scope="col">First Player Select</th>
                  <th scope="col">Second Player Select</th>
                  <th scope="col">Winner id</th> 
                  <th scope="col">action</th>
                </tr>
              </thead>
              <tbody>
                <% games.forEach(({id, firstPlayerSelect, secondPlayerSelect, winnerId}) => { %> 
                <tr>
                  <th scope="row"><%= id %></th>
                  <td><%= firstPlayerSelect %></td>
                  <td><%= secondPlayerSelect %></td>
                  <td><%= winnerId %></td>
                  <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <!-- <div class="p-1">
                            <a href="/admin/game/details">
                              <button type="button" class="btn btn-primary">Details</button>
                            </a>
                        </div> -->
                        <div class="p-1">
                            <a href="/admin/game/<%= id %>/edit">
                              <button type="button" class="btn btn-warning">Edit</button>
                            </a>
                        </div>
                        <div class="p-1">
                            <form action="/admin/game/<%= id %>/delete" method="POST">
                              <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                  </td>
                </tr>
                <% }) %> 
              </tbody>
            </table>
          </div>
    </header>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>